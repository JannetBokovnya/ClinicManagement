@model IEnumerable<ClinicManagement.Web.Models.Doctor>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

</br>
<div class="wrapper">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Доктора
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <a href="@Url.Action("RegisterDoctor","Account")" class="btn btn-success" style="margin-bottom:10px"><i class="fa fa-plus"></i>Добавить</a>
                        @*<th><a href="@Url.Action("RegisterDoctor","Account")" class="btn btn-primary btn-xs"><i class="fa fa-edit"></i>Add</a></th>*@
                        <table id="doctors" class="table table-striped table-bordered " style="width:100%">
                            <thead>
                                <tr>
                                    <th> Имя </th>
                                    <th> Фамилия </th>
                                    <th>Телефон </th>
                                    <th>Специализация </th>
                                    <th>Статус</th>
                                    <th>Статус аккаунта</th>
                                    <th></th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @item.FirstName </td>
                                    <td> @item.LastName </td>
                                    <td> @item.Phone</td>
                                    <td> @item.Specialization.Name</td>
                                    <td>
                                        @{
                                            if (item.IsAvailable == true)
                                            {
                                                <a href="#" style="padding: 3px 10px 3px 10px; background-color:green " class="badge" readonly>Доступен</a>
                                            }
                                            else
                                            {
                                                <a href="#" style="padding: 3px 10px 3px 10px; background-color:red " class="badge" readonly>Не доступен</a>
                                            }
                                        }
                                    </td>
                                    <td>
                                        @{
                                            //cast to bool
                                            if ((bool)item.Physician.IsActive)
                                            {
                                                <a href="#" style="padding: 3px 10px 3px 10px; background-color:green " class="badge" readonly>Active</a>
                                            }
                                            else
                                            {
                                                <a href="#" style="padding: 3px 10px 3px 10px; background-color:red " class="badge" readonly>locked</a>
                                            }
                                        }

                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details","Doctor", new { id = item.Id})" class="btn btn-primary btn-sm"><i class="fa fa-edit"></i>Детально</a>
                                        


                                    </td>
                                </tr>
                            }
                        </table>
                        <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
    @section scripts{
        <script>
            $(document).ready(function () {
                $("#doctors").DataTable();
            });
        </script>
    }
