@model ClinicManagement.Web.ViewModel.AttendanceFormViewModel
@{
    Layout = null;
}

<div>
    <div class="modal-header">
        @*<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">Modal title</h4>*@

        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Создать запись к врачу</h4>
    </div>

    <div class="modal-body">



        @*@using (Html.BeginForm("Create", "Appointments", FormMethod.Post, new { onsubmit = "return SubmitForm(this)", onreset = "return ResetForm(this)", id = "appointment_form" }))*@
        @using (Html.BeginForm("Create", "Attendance", FormMethod.Post, new { autocomplete = "off", id = "appointment_form" }))

        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Patient)

        <div class="row form-row">
            <div class="col-12 col-sm-12">
                <div class="form-group">
                    <label>Clinic Remarks <span class="required">*</span></label>
                    @Html.TextAreaFor(m => m.ClinicRemarks, new { @class = "form-control", @rows = 8 })
                    @Html.ValidationMessageFor(m => m.ClinicRemarks)
                </div>
            </div>
            <div class="col-12 col-sm-12">
                <div class="form-group">
                    <label>Diagnosis <span class="required">*</span></label>
                    @Html.TextAreaFor(m => m.Diagnosis, new { @class = "form-control col-md-7 col-xs-12" })
                    @Html.ValidationMessageFor(m => m.Diagnosis)

                </div>
            </div>

            <div class="col-12 col-sm-12">
                <div class="form-group">
                    <label>Second Diagnosis <span class="required">*</span></label>
                    @Html.TextAreaFor(m => m.SecondDiagnosis, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.SecondDiagnosis)

                </div>
            </div>

            <div class="col-12 col-sm-12">
                <div class="form-group">
                    <label>Third Diagnosis <span class="required">*</span></label>
                    @Html.TextAreaFor(m => m.ThirdDiagnosis, new { @class = "form-control " })
                    @Html.ValidationMessageFor(m => m.ThirdDiagnosis)

                </div>
            </div>

            <div class="col-12 col-sm-12">
                <div class="form-group">
                    <label>Therapy </label>

                    @Html.TextAreaFor(m => m.Therapy, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Therapy)

                </div>
            </div>

        </div>
            <input type="submit" value="Сохранить" id="btnSaveUs" class="btn btn-primary btn-block" />


        }
    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}


