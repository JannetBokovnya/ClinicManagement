@model IEnumerable<ClinicManagement.Web.Models.Appointment>
@{
    Layout = null;
}
<div class="row">
    <div class="panel-body">
        <div class="table-responsive">
           
                <table id="daillyAppointments" class="table table-striped table-bordered " style="width:100%">
                    <thead>
                        <tr>
                            <th>Token</th>
                            <th>Имя пациента</th>
                            <th>Телефон</th>
                            <th>Дата</th>
                            <th>Время</th>
                            <th>Доктор</th>
                            <th>Детали</th>
                            <th>Статус</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Patient.Token</td>
                                <td>@item.FullNamePatient</td>
                                <td>@item.Patient.Phone</td>
                                <td>@item.Date.ToString("MMM")-@item.Date.ToString("d ")-@item.Date.ToString("yyyy")</td>
                                <td>@item.Time.ToString("HH:mm")</td>
                                <td>@item.FullNameDoctor</td>
                                <td>@item.Detail</td>

                                <td>
                                    @{
                                        if (item.Status == true)
                                        {
                                            <a href="#" style="padding: 3px 10px 3px 10px; background-color:green " class="badge" readonly>Approved</a>
                                        }
                                        else
                                        {
                                            <a href="#" style="padding: 3px 10px 3px 10px; background-color:greenyellow" class="badge" readonly>Pending</a>
                                        }
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                
            </div>
    </div>
</div>

