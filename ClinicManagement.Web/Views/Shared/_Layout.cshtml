                    </a>
                    <ul class="dropdown-menu dropdown-user"></ul>
                </li>

            </ul>
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <!-- menu profile quick info -->
                        <div class="profile clearfix">
                            <div class="profile_pic">
                                <img src="~/Content/images/user.png" alt="..." class="img-circle profile_img">
                            </div>
                            <div class="profile_info">
                                <span>Welcome,</span>
                                <h2>Doctor</h2>
                                @*@{
                                        var identity = (ClaimsIdentity)User.Identity;
                                       var name = identity.FindFirstValue(ClaimTypes.GivenName) ?? identity.GetUserName();
                                         }
                                    <h2>@name</h2>*@

                            </div>
                        </div>
                        <br />
                        <!-- sidebar menu -->
                        @*<div id="sidebar-menu" class="main_menu_side hidden-print main_menu">*@
                        <div class="menu_section">
                            @*<div class="navbar-default sidebar" role="navigation">
                                <div class="sidebar-nav navbar-collapse">*@
                            @Html.Partial("_AdminNav")
                            @*@if (User.IsInRole(RoleName.AdministratorRoleName))
                                {
                                @Html.Partial("_AdminNav")
                                }
                                @if (User.IsInRole(RoleName.DoctorRoleName))
                                {
                                @Html.Partial("_DoctorNav")
                                }*@
                        </div>

                        @*</div>*@
                        <!-- /sidebar menu -->
                    </ul>
                </div>
            </div>

            @*<div class="nav toggle">
                <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                </div>
                @Html.Partial("_LoginPartial")*@


        </nav>
        <div id="page-wrapper">
            @RenderBody()
        </div>
        @*<footer>
                <div class="pull-right">
                    Developed by ...
                </div>
                <div class="clearfix"></div>
            </footer>*@
        @*</div>*@
        @*</div>*@


        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- DataTables JavaScript -->
    <script src="@Url.Content("~/bower_components/raphael/raphael-min.js")"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <!-- DataTables JavaScript -->
    <script src="@Url.Content("~/bower_components/datatables/media/js/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js")">
    </script>
    <!-- Custom Theme JavaScript -->
    <script src="@Url.Content("~/Scripts/sb-admin-2.js")"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/notify.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
   

    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    @*<script>
            $(document).ready(function () {
                $('#dataTables-example').DataTable({
                    responsive: true
                });
            });
        </script>*@
    @RenderSection("scripts", required: false)
</body>
