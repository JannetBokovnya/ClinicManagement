@model ClinicManagement.Web.Models.Specialization
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Specialization", FormMethod.Post, new { onsubmit = "return SubmitForm(this)", onreset = "return ResetForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "control-label" })
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Name)
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
        <input type="reset" value="Вернуться" class="btn" />
    </div>
}
