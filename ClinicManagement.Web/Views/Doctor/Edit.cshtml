@model ClinicManagement.Web.ViewModel.DoctorFormViewModel
@{
    ViewBag.Title = "DoctorForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<div class="row">
        <div class="col-lg-6">
            <h1 class="page-header">Доктор</h1>
        </div>

    </div>*@
</br>
<div class="row">
    <div>
        <div class="panel panel-default">
            <div class="panel-heading">
                Редактировать
            </div>
            <div class="panel-body">
                <div class="col-lg-6">
                    
                    @using (Html.BeginForm("Edit", "Doctor", FormMethod.Post, new { @class = "form-horizontal form-label-left", autocomplete = "off" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id)
                        //<hr />

                        <div class="form-group">
                            <label class="control-label col-md-2">Имя</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Фамилия</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Телефон</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Специализация</label>
                            <div class="col-md-10">
                                @Html.DropDownListFor(m => m.Specialization, new SelectList(Model.Specializations, "Id", "Name"), "", new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Specialization)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Адрес</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Статус</label>
                            <div class="col-md-10">
                                <div class="radio">
                                    <label> @Html.RadioButtonFor(model => model.IsAvailable, "true", new { @class = "flat" }) Available </label>
                                    <label> @Html.RadioButtonFor(model => model.IsAvailable, "false", new { @class = "flat" }) Closed </label>
                                </div>
                            </div>
                        </div>
                       



                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                @*<input type="submit" value="Добавить" class="btn btn-default" />*@
                                <button type="submit" class="btn btn-success">Добавить</button>
                                <a href="@Url.Action("Details","Doctor", new{id =Model.Id})" class="btn btn-default">Вернуться</a>
                            </div>
                        </div>


                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
